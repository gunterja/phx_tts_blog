<div class="show-view-wrapper">
  <p>
    <strong>Title:</strong>
    <%= @blog_post.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= link_to blog_post.user.username, user_profile_path(id: blog_post.user_id) %>
  </p>

  <p>
    <strong>Blog entry:</strong>
    <%= @blog_post.blog_entry %>
  </p>

  <p>
    <ul>
      <% @blog_post.comments.each do |comment| %>
      <li>
        <p>
          On <%= comment.created_at.stamp('The 1st of January, 2001 at 11:56am') %>,
          <%= link_to comment.user.username, user_profile_path(id: comment.user_id) %> said:
        </p>
        <p>
          <%= comment.comment_entry %>
        </p>
      </li>
      <% end %>
    </ul>
  </p>


  <div class="well">
    <%= render 'comments/form' %>
  </div>

  <% if current_user == @blog_post.user %>
    <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
  <% end %>
  <%= link_to 'Back', blog_posts_path %>
</div>